% Formatos personalizados TOC

\titlecontents*{section}
    [0pt]
    {\addvspace{2pc}\centering\bfseries\large}
    {\Sectionname \thecontentslabel. \quad \MakeUppercase}
    {}
    {}
    
\titlecontents{subsection}
    [0pt]
    {\addvspace{0.5pc}\bfseries\hspace{2em}\normalsize}
    {\contentslabel{2em}\MakeUppercase}
    {\hspace*{0em}}
    {\titlerule*[8pt]{.}\contentspage}

\titlecontents{subsubsection}
    [0pt]
    {\hspace{3em}\normalsize}
    {\contentslabel{3em}}
    {\hspace*{0em}}
    {\titlerule*[8pt]{.}\contentspage}
    
\titlecontents{paragraph}
    [0pt]
    {}
    {}
    {}
    {}
    
