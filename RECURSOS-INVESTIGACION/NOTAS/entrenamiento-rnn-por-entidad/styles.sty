% Formatos personalizados TOC

\titlecontents*{section}
    [0pt]
    {\addvspace{1pc}\centering\bfseries\normalsize}
    {\Sectionname \thecontentslabel. \quad \MakeUppercase}
    {}
    {}
    
\titlecontents{subsection}
    [0pt]
    {\addvspace{0.3pc}\bfseries\hspace{2em}\normalsize}
    {\contentslabel{2em}\MakeUppercase}
    {\hspace*{0em}}
    {\titlerule*[8pt]{.}\contentspage}

\titlecontents{subsubsection}
    [0pt]
    {\hspace{3em}\normalsize}
    {\contentslabel{3em}}
    {\hspace*{0em}}
    {\titlerule*[8pt]{.}\contentspage}
    
\titlecontents{paragraph}
    [0pt]
    {}
    {}
    {}
    {}
    
\titlecontents{subparagraph}
    [0pt]
    {}
    {}
    {}
    {}
    
\titlecontents{frontms}
    [0pt]
    {\addvspace{-2pt}\bfseries}
    {\normalsize}
    {}
    {\titlerule*[8pt]{.}\contentspage}
    
\titlecontents{footerms}
    [0pt]
    {\addvspace{1pc}\bfseries\normalsize}
    {}
    {\MakeUppercase}
    {\titlerule*[8pt]{}\contentspage}


